<!-- Internal LockLogin messages -->
<messages>
    <command>
        <processing argument="cmd">§dProcesando el comando§7 cmd§d, porfavor espere</processing>
        <usages>
            <usage command="locklogin">
                <line line="0">§0§m----------------------</line>
                <line line="1" blank="true"/>
                <line line="2">§dUsos del comando LockLogin</line>
                <line line="3">§5/locklogin help§7 -§d Muestra esto</line>
                <line line="4">§5/locklogin reload§7 -§d Recarga el plugin</line>
                <line line="5">§5/locklogin modules [info|list|load|unload|reload] [module]§7 -§d Gestiona los modulos</line>
                <line line="6" blank="true"/>
                <line line="7">§0§m----------------------</line>
            </usage>
        </usages>

        <responses>
            <response command="locklogin" argument="reload lang">
                <success>§dSe ha detectado un cambio de idioma, transformando...</success>
                <fail/>
            </response>

            <response command="locklogin" argument="reload configuration">
                <success>§dConfiguración actualizada correctamente</success>
                <fail>§5Error al actualizar configuración</fail>
            </response>
            <response command="locklogin" argument="reload messages">
                <success>§dMensajes actualizados correctamente</success>
                <fail>§5Error al actualizar configuración</fail>
            </response>

            <response command="locklogin" argument="modules info">
                <success/>
                <fail argument="module">§5Módulo desconocido: §7module</fail>
            </response>
        </responses>
    </command>
</messages>